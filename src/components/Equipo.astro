---
import fotoImg from "../assets/pexels-foto.jpeg";

---

<style lang="scss">
    @use "../styles/variables/colors";
    @use "../styles/variables/metrics";

    h1{
        font-size: 4rem;
    }
    h2 {
        font-size: 2rem;
        margin-bottom: 1rem;
    }
    .wrapper {
        max-width: metrics.$container-max-width;
        margin: auto;

    }
    //ubicación de tarjetas
    .container {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        margin-bottom: 4rem;
    }
    
    .tarjet {
        background-color: colors.$primary-color;
        padding: 2rem;
        border-radius: 2rem;
        width: 400px;
        transition: transform 0.3s ease, background-color 200ms ease;

        &:hover {
            transform: scale(1.02);
            background-color: colors.$logotype;
        }

        .foto {
            img {
                max-width: 100%;
                width: 400px;
                border-radius: 2rem;
            }
        }

        .titulo {
            margin-top: 1rem;
            text-align: center;
        }

        .descripcion {
            margin-top: 1rem;
            text-align: center;
        }
    }
</style>
