---
// assets
import cartIcon from "../assets/cart-icon.svg";
import menuIcon from "../assets/menu-icon.svg";
---

<style lang="scss">
    @use "../styles/variables/colors";
    @use "../styles/variables/metrics";

    header {
        height: 80px;
        box-shadow: 0 8px 8px 0 rgba(0, 0, 0, 0.1);

        .navigation {
            width: metrics.$container-max-width;
            margin: auto;
            display: flex;
            height: inherit;
            align-items: center;
            justify-content: space-between;

            .hamburguer-menu {
                display: none;

                a {
                    text-decoration: none;
                    font-size: 2rem;
                    color: colors.$black;
                }
            }

            .logo {
                font-size: 24px;
                font-weight: 500;
                text-decoration: none;
                color: colors.$logotype;
            }

            nav {
                font-size: 16px;
                ul {
                    display: flex;
                    list-style: none;
                    margin: 0;
                    padding: 0;

                    li {
                        margin-inline: 0.6rem;

                        a,
                        a:visited {
                            color: colors.$black;
                            text-transform: uppercase;
                            text-decoration: none;
                        }
                    }
                }
            }

            .icons {
                display: flex;
                align-items: center;

                a {
                    text-transform: uppercase;
                    color: colors.$black;
                }

                .icon-cart {
                    display: flex;
                    align-items: center;
                    justify-content: space-between;
                    flex-direction: column;
                    margin-inline: 0.6rem;
                    cursor: pointer;
                    height: 47px;
                    text-decoration: none;

                    img {
                        margin-block-end: 5px;
                    }
                }
            }
        }
    }

    @media screen and (max-width: 1000px) {
        header {
            overflow-x: hidden;

            .navigation {
                nav {
                    position: absolute;
                    top: 80px;
                    left: 0;
                    background-color: colors.$white;
                    display: none;
                    box-shadow: 0 8px 8px 0 rgba(0, 0, 0, 0.1);
                    width: 100%;

                    &.visible {
                        display: block;
                    }

                    ul {
                        max-width: metrics.$container-max-width;
                        margin: auto;
                        padding: 1rem;
                        display: flex;
                        flex-direction: column;
                        align-items: center;

                        li {
                            display: block;
                            a {
                                display: block;
                                padding: 0.8rem 1.6rem;
                                background-color: hsl(0, 0%, 90%);
                                border-radius: 1rem;
                                margin-bottom: 1rem;
                            }
                        }
                    }
                }

                .hamburguer-menu {
                    display: flex;
                    align-items: center;
                    justify-content: space-between;
                    flex-direction: column;
                    margin-inline: 0.6rem;
                    cursor: pointer;
                    height: 47px;
                    text-decoration: none;

                    img {
                        width: 22px;
                        margin-block-end: 5px;
                    }
                }

                .icons {
                    justify-self: flex-end;
                    .icon-cart {
                    }
                }
            }
        }
    }
</style>

<header>
    <div class="navigation">
        <a class="logo" href="/">Sachamama</a>

        <nav id="navigation">
            <ul>
                <li>
                    <a href="/">Inicio</a>
                </li>
                <li>
                    <a href="/ver-producto">Producto</a>
                </li>
                <li>
                    <a href="/conocenos">Conocenos</a>
                </li>
            </ul>
        </nav>

        <div class="icons">
            <a id="hamburguer-button" class="hamburguer-menu">
                <img src={menuIcon} alt="" />
                <span>Menu</span>
            </a>
            <a class="icon-cart" href="/carrito">
                <img src={cartIcon} alt="" />
                <span>Carrito</span>
            </a>
        </div>
    </div>
</header>

<script>
    const hamburguerButton = document.getElementById("hamburguer-button");
    const navigation = document.getElementById("navigation");

    let hamburguerButtonText = hamburguerButton.querySelector("span");

    hamburguerButton.addEventListener("click", () => {
        hamburguerButtonText.textContent =
            hamburguerButtonText.textContent === "Menu" ? "Cerrar" : "Menu";

        navigation.classList.toggle("visible");
    });
</script>
